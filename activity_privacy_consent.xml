<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Consent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:textColor="?android:attr/textColorPrimary" />

        <!-- Privacy text -->
        <TextView
            android:id="@+id/tvPrivacyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please review our privacy policy and consent to the following data collection and usage:"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            android:textColor="?android:attr/textColorSecondary" />

        <!-- Data collection checkbox -->
        <CheckBox
            android:id="@+id/cbDataCollection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allow collection of basic health data"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Analytics checkbox -->
        <CheckBox
            android:id="@+id/cbAnalytics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allow usage analytics for app improvement"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Marketing checkbox -->
        <CheckBox
            android:id="@+id/cbMarketing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allow marketing communications"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Buttons container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Decline button -->
            <Button
                android:id="@+id/btnDecline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#F44336"
                android:layout_marginEnd="8dp"
                android:padding="12dp" />

            <!-- View policy button -->
            <Button
                android:id="@+id/btnViewPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Policy"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary"
                android:backgroundTint="?android:attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="8dp"
                android:padding="12dp" />

            <!-- Accept button -->
            <Button
                android:id="@+id/btnAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#4CAF50"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
