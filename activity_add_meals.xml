<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/windowBackground"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Meals"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:textColor="?android:attr/textColorPrimary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Track your meals and water intake"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:textColor="?android:attr/textColorSecondary" />

    <EditText
        android:id="@+id/etMealName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Meal Name (e.g., Breakfast, Chicken Salad)"
        android:inputType="text"
        android:layout_marginBottom="20dp"
        android:padding="15dp"
        android:textSize="16sp"
        android:background="@drawable/edittext_background" />

    <EditText
        android:id="@+id/etCaloriesConsumed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Calories Consumed"
        android:inputType="number"
        android:layout_marginBottom="20dp"
        android:padding="15dp"
        android:textSize="16sp"
        android:background="@drawable/edittext_background" />

    <EditText
        android:id="@+id/etWaterIntake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Water Intake (liters)"
        android:inputType="numberDecimal"
        android:layout_marginBottom="40dp"
        android:padding="15dp"
        android:textSize="16sp"
        android:background="@drawable/edittext_background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Previous"
            android:textSize="16sp"
            android:backgroundTint="#757575"
            android:textColor="@android:color/white"
            android:layout_marginEnd="10dp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginStart="10dp" />

    </LinearLayout>

</LinearLayout>