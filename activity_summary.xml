<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/windowBackground"
    android:padding="20dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity Summary"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:textColor="?android:attr/textColorPrimary" />

    <!-- Exercise Info -->
    <TextView
        android:id="@+id/tvExerciseInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exercise info"
        android:textSize="18sp"
        android:layout_marginBottom="30dp"
        android:padding="15dp"
        android:background="@drawable/card_background"
        android:textColor="?android:attr/textColorPrimary" />

    <!-- Meal Info -->
    <TextView
        android:id="@+id/tvMealInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meal info"
        android:textSize="18sp"
        android:layout_marginBottom="30dp"
        android:padding="15dp"
        android:background="@drawable/card_background"
        android:textColor="?android:attr/textColorPrimary" />

    <!-- Edit Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnEditExercise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:text="Edit Exercise"
            android:textSize="18sp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:elevation="4dp" />

        <Button
            android:id="@+id/btnEditMeal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:text="Edit Meal"
            android:textSize="18sp"
            android:backgroundTint="#FF5722"
            android:textColor="@android:color/white"
            android:elevation="4dp" />
    </LinearLayout>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:text="Previous"
            android:textSize="18sp"
            android:backgroundTint="#607D8B"
            android:textColor="@android:color/white"
            android:elevation="4dp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:text="Finish"
            android:textSize="18sp"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:elevation="4dp" />
    </LinearLayout>
</LinearLayout>