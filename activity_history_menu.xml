<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/windowBackground"
    android:padding="20dp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View History"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        android:textColor="?android:attr/textColorPrimary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose what history you want to view"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"
        android:textColor="?android:attr/textColorSecondary" />

    <!-- History Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="40dp">

        <Button
            android:id="@+id/btnExerciseHistory"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:text="Exercise History"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:drawableTop="@drawable/ic_activity"
            android:drawablePadding="10dp"
            android:textColor="@android:color/white"
            android:elevation="4dp" />

        <Button
            android:id="@+id/btnMealHistory"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="Meal History"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="#FF5722"
            android:drawableTop="@drawable/ic_utensils"
            android:drawablePadding="10dp"
            android:textColor="@android:color/white"
            android:elevation="4dp" />

    </LinearLayout>

    <!-- Previous Button -->
    <Button
        android:id="@+id/btnPrevious"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#607D8B"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp" />

</LinearLayout>